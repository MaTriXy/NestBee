<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <Space
        android:id="@+id/offset"
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:layout_centerVertical="true" />

    <com.mhw.nestbee.view.LoginButton
        android:id="@+id/signInFacebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/offset"
        android:layout_marginLeft="@dimen/side_margin"
        android:layout_marginRight="@dimen/side_margin"
        app:socialIcon="@drawable/ic_facebook_white_24dp"
        app:text="Sign in Facebook" />

    <com.mhw.nestbee.view.LoginButton
        android:id="@+id/signInVk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signInFacebook"
        android:layout_marginLeft="@dimen/side_margin"
        android:layout_marginRight="@dimen/side_margin"
        android:layout_marginTop="12dp"
        app:socialIcon="@drawable/ic_vk_white_24dp"
        app:text="Sign in Vk" />

</RelativeLayout>